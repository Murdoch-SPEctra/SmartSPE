{{! Add a heading for team name  }}

{{#groupname}}
<h2 class="mb-4">Group: {{groupname}}</h2>
{{/groupname}}


{{#members}}
<div class="group-box d-flex justify-content-between align-items-center border-bottom py-3">
  <div class="card-header d-flex align-items-center" >
    <img src="{{profilepic}}" alt="Profile Picture" class="rounded-circle mr-3" style="width: 50px; height: 50px;">
    <div>
      <h5 class="mb-0">{{name}}</h5>
      <small class="text-muted">Student ID: {{studentid}}</small>
    </div>            
  </div>
  <div>
    {{#disabled}}
      <span 
        data-bs-toggle="tooltip" 
        data-bs-placement="top" 
        title="{{disabledbuttontooltip}}">
        <a href="#" class="btn btn-primary btn-sm me-2 disabled opacity-50" tabindex="-1" aria-disabled="true">
          View Submission
        </a>
      </span>
    {{/disabled}}

    {{^disabled}}
      <a href="{{{viewurl}}}" class="btn btn-primary btn-sm me-2">
        View Submission
      </a>
    {{/disabled}}

  </div>
</div>
{{/members}}

{{^members}}
<p class="text-muted">No members found for this group.</p>
{{/members}}