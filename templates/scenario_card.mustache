<div class="col">
  <div class="card h-100 smartspe-card">
    <div class="card-body d-flex flex-column">
      <div class="d-flex align-items-center mb-2">
        <img class="rounded-circle me-2 smartspe-avatar" src="{{avatarurl}}" alt="" width="40" height="40"/>
        <div>
          <h3 class="h6 mb-0 smartspe-card-title">{{title}}</h3>
          <div class="small text-muted">{{difficulty}}</div>
        </div>
      </div>
      <p class="smartspe-summary flex-grow-1">{{summary}}</p>
      <div class="smartspe-meta mt-2">
        <div class="mb-2">
          {{#tags}}
            <span class="badge bg-info text-dark me-1 mb-1">{{.}}</span>
          {{/tags}}
        </div>
        <div class="d-flex justify-content-between align-items-center small text-muted">
          <span class="badge bg-light text-dark border smartspe-status">{{status}}</span>
          <span>{{updated}}</span>
        </div>
      </div>
      <div class="mt-3 d-grid">
        <button class="btn btn-outline-secondary btn-sm" disabled title="Demo only">Preview</button>
      </div>
    </div>
  </div>
</div>
